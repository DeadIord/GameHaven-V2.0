@model ICollection<Halls>
@{
    ViewBag.Title = "Залы";
}
<h1>Все Залы</h1>

<div class="main-button">
  <a asp-action="AddHalls"
      style="width:auto">
        Добавить новый зал
    </a>
    </div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="most-popular">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="heading-section">
                            <h4>Зал</h4>
                        </div>
                        <div class="row">
                            @foreach (var hall in Model)
                            {
                                <div class="col-lg-3 col-sm-6">
                                    <div class="item">
                                        <h4>@hall.HallsName<br /></h4>
                                        <div class="main-border-button">
                                            <form asp-action="Delete" asp-route-id="@hall.HallsId" method="post">

                                                <a asp-action="EditHalls" asp-controller="Halls" asp-route-id="@hall.HallsId">Редактирование</a>
                                                <partial name="Details" model="@hall" />

                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Вы уверены что хотите удалить данную зал:@hall.HallsName')">
                                                    Удаление
                                                </button>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
   
