@model Halls

<form asp-action="Details" method="post">
    <div class="modal fade"  id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog"  role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #27292a">
                    <h5 class="modal-title" style="color: #ec6090;" id="deleteModalLabel">@Model.HallsName</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="background-color: #27292a">
                    @foreach (var computer in Model.Computers)
                    {
                        <ul class="list-group mt-2">
                            <li class="list-group-item" style="background: #27292a">
                                <div class="accordions" style="color: white;" onclick="toggleAccordion(this)">@computer.ComputerName</div>
                                <div class="panel">
                                    <div class="form-group">
                                        <label style="color: white;" class="control-label">@computer.CompanyName</label>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                    
                </div>
                <div class="modal-footer" style="background-color: #27292a">
                    <button type="button" style="background-color: #ec6090; color: white" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" asp-for="HallsId" />


    <button type="button" class="btn-sm btn" data-toggle="modal" data-target="#deleteModal">
        <i class="bi bi-pc-display" style="color:white"></i>

    </button>
    
</form>
<script>
    function toggleAccordion(element) {
        element.classList.toggle('active');
        var panel = element.nextElementSibling;
        if (panel.style.maxHeight) {
            panel.style.maxHeight = null;
        } else {
            panel.style.maxHeight = panel.scrollHeight + 'px';
        }
    }
</script>