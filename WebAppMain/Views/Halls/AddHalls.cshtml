@model WebAppMain.Models.Halls
@{
    ViewBag.Title = "Добавление зала";
}
<form asp-action="AddHalls" asp-controller="Halls">
    <div class="container ">
        <div class="card shadow roundeds mt-5" style="background: #27292a;">
            <div class="center-wrap m-4">
                <h4 class="text-lg-center" style="color: #ec6090;">Добавление зала</h4>
                <div class="form-group">
                    <label asp-for="HallsName" style="color: #ec6090;" class="control-label">Зал</label>
                    <input type="text" asp-for="HallsName" placeholder="Зал" class="form-control" />
                    <span asp-validation-for="HallsName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" style="background-color: #ec6090" class="btn btn-danger">Создать</button>
                    <a asp-action="ListHalls" style="background-color: #ec6090" class="btn btn-danger">Отмена</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}