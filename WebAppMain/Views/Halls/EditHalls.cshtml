@model WebAppMain.Models.Halls
@{
    ViewBag.Title = "редактирование зала";
}
<form asp-action="EditHalls" asp-controller="Halls" asp-route-HallsId="@Model.HallsId">
    <div class="container ">
        <div class="card shadow roundeds">
            <div class="center-wrap m-4">
                <h4 class="text-lg-center">Редактирование зала</h4>
                <div class="form-group">
                    <label asp-for="HallsName" class="control-label">Зал</label>
                    <input type="text" asp-for="HallsName" placeholder="Зал" class="form-control" />
                    <span asp-validation-for="HallsName" class="text-danger"></span>
                </div>  

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <a asp-action="ListHalls" class="btn btn-link">Отмена</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}