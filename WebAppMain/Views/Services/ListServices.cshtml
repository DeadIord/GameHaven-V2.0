@model IEnumerable<WebAppMain.Models.Services>
@{
    ViewBag.Title = "Все Услуги";
}
<h1>Все Услуги</h1>

@if (Model.Any())
{
    <a asp-action="AddServices"
   class="btn btn-primary mb-3" style="width:auto">
        Добавить новую услугу
    </a>

    foreach (var services in Model)
    {
        <div class="card-tableNew">
            <div class="card-header">
            </div>

            <div class="card-body">

                <table style="display:table">
                    <tr>

                        <td>
                            <table style="display:inline-table">
                                <tr>
                                    <th style="padding-right:15px">Услуга: </th>
                                    <td>@services.NameOfTheService</td>
                                </tr>
                                <tr>
                                    <th style="padding-right:15px">Стоимость: </th>
                                    <td>@services.PricePerService</td>
                                </tr>

                            </table>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" asp-route-id="@services.ServicesId" method="post">
                 
                    <a asp-action="EditServices" asp-controller="Services" asp-route-id="@services.ServicesId" class="btn btn-primary">Редактирование</a>
                    <button type="submit" class="btn btn-danger"
                    onclick="return confirm('Вы уверены что хотите удалить данную услугу: @services.NameOfTheService')">
                        Удаление
                    </button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card-tableNew">
        <div class="card-header">
            Еще не добавлены услуги
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Используйте кнопку ниже, чтобы добавить услугу
            </h5>
            <a class="btn btn-primary" style="width:auto"
           asp-action="AddServices">
                Добавить новую услугу
            </a>
        </div>
    </div>
}
