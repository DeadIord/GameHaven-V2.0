@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Регистрация</h1>
<div class="container ">
    <div class="card shadow roundeds mt-5" style="background: #27292a;">
        <div class="center-wrap m-4">
            <h4 class="text-lg-center" style="color: #ec6090;">Создайте новую учетную запись</h4>
            <div class="form-group">
                <label asp-for="Input.Email" style="color: #ec6090;" class="control-label">Email</label>
                <input type="text" asp-for="Input.Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" style="color: #ec6090;" class="control-label">Пароль</label>
                <input type="text" asp-for="Input.Password" placeholder="Пароль" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" style="color: #ec6090;" class="control-label">Повторите пароль</label>
                <input type="text" asp-for="Input.ConfirmPassword" placeholder="Повторите пароль" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" style="background-color: #ec6090" class="btn btn-danger">Создать</button>
                <a asp-action="ListHalls" style="background-color: #ec6090" class="btn btn-danger">Отмена</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
